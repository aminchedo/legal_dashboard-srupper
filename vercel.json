{
  "version": 2,
  "framework": null,
  "buildCommand": "cd frontend && npm ci --legacy-peer-deps && npm run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/**/*.py": {
      "runtime": "@vercel/python@3.12"
    },
    "api/index.py": {
      "maxDuration": 10,
      "memory": 1024
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.py" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "env": {
    "PYTHONPATH": "./",
    "PYTHON_SETUP_REQUIRES": "setuptools>=68.0.0 wheel>=0.41.0"
  },
  "excludeFiles": [
    "**/*.pyc",
    "**/__pycache__/**",
    ".env",
    ".git/**",
    ".venv/**",
    "tests/**",
    "*.md",
    ".gitignore",
    "frontend/node_modules/**",
    "frontend/.vite/**",
    "frontend/src/**/*.test.*"
  ]
}