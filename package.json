{
    "name": "legal-dashboard-frontend",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "dev:frontend": "vite --port 5177 --strictPort",
        "dev:backend": "cd src/legal-dashboard-api && npm run dev",
        "dev:all": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
        "build": "vite build",
        "preview": "vite preview",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint . --ext ts,tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "typecheck": "tsc --noEmit",
        "clean": "rimraf dist",
        "install:all": "npm install && cd src/legal-dashboard-api && npm install",
        "build:all": "npm run build && npm --prefix src/legal-dashboard-api run build",
        "start:backend": "npm --prefix src/legal-dashboard-api run start",
        "start:frontend": "vite preview --port 5177 --strictPort",
        "start:full": "npm run build:all && concurrently \"npm:start:backend\" \"npm:start:frontend\"",
        "start:quick": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\""
    },
    "dependencies": {
        "@ant-design/icons": "^5.5.1",
        "@tanstack/react-query": "^5.59.16",
        "antd": "^5.21.4",
        "axios": "^1.7.7",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "framer-motion": "^11.11.9",
        "lucide-react": "^0.454.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-error-boundary": "^4.0.13",
        "react-hook-form": "^7.53.1",
        "react-router-dom": "6.23.1",
        "recharts": "^2.12.7",
        "styled-components": "^5.3.11",
        "tailwind-merge": "^2.5.4",
        "zustand": "^5.0.1"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.0.1",
        "@testing-library/user-event": "^14.5.2",
        "@types/node": "^22.17.1",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@types/styled-components": "^5.1.34",
        "@typescript-eslint/eslint-plugin": "^8.13.0",
        "@typescript-eslint/parser": "^8.13.0",
        "@vitejs/plugin-react": "^4.7.0",
        "@vitest/coverage-v8": "^2.1.4",
        "@vitest/ui": "^2.1.4",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.2.0",
        "eslint": "^9.13.0",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.14",
        "jsdom": "^25.0.1",
        "postcss": "^8.4.47",
        "prettier": "^3.3.3",
        "rimraf": "^6.0.1",
        "tailwindcss": "^3.4.17",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.6.3",
        "vite": "^5.4.19",
        "vitest": "^2.1.4"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    }
}
