{
  "name": "legal-dashboard-api",
  "version": "1.0.0",
  "private": true,
  "main": "dist/app.js",
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/app.js",
    "dev": "nodemon",
    "build": "tsc && tsc-alias",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "migrate": "node -r tsconfig-paths/register -r ts-node/register src/utils/migrate.ts",
    "seed": "node -r tsconfig-paths/register -r ts-node/register src/utils/seed.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postinstall": "npm run build",
    "queue:dev": "node -r tsconfig-paths/register -r ts-node/register src/queue/worker.ts",
    "db:migrate": "node -r tsconfig-paths/register -r ts-node/register src/scripts/migrate.ts",
    "db:seed": "node -r tsconfig-paths/register -r ts-node/register src/scripts/seed.ts",
    "docker:build": "docker build -t legal-dashboard-ts .",
    "docker:run": "docker run -p 3000:3000 legal-dashboard-ts"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.6.0",
    "bull": "^4.16.5",
    "cheerio": "^1.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "pdf-parse": "^1.1.1",
    "redis": "^4.7.1",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cheerio": "^0.22.35",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.10",
    "@types/node-cron": "^3.0.11",
    "@types/pdf-parse": "^1.1.5",
    "@types/redis": "^4.0.11",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.1"
  }
}
